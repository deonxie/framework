	<cache name="personal.deon.framework.core.entity.CoreUser"
		maxEntriesLocalHeap="1000" eternal="true" overflowToDisk="true"
		maxEntriesLocalDisk="10000" />
	<cache name="personal.deon.framework.core.entity.CoreRole"
		maxEntriesLocalHeap="100" eternal="true" overflowToDisk="true"
		maxEntriesLocalDisk="1000" />
	<cache name="personal.deon.framework.core.entity.CoreConfig"
		maxEntriesLocalHeap="1000" eternal="true" overflowToDisk="true"
		maxEntriesLocalDisk="10000" />
	<cache name="personal.deon.framework.fuliao.entity.FuliaoUser"
		maxEntriesLocalHeap="1000" eternal="true" overflowToDisk="true"
		maxEntriesLocalDisk="10000" />
	<cache name="personal.deon.framework.fuliao.entity.AskBuyInfo"
	    maxEntriesLocalHeap="1000" eternal="true" overflowToDisk="true"
	    maxEntriesLocalDisk="1000"/>
	<cache name="personal.deon.framework.fuliao.entity.FuliaoProduct"
	    maxEntriesLocalHeap="1000" eternal="true" overflowToDisk="true"
	    maxEntriesLocalDisk="1000"/>
	<cache name="personal.deon.framework.fuliao.entity.FuliaoShop"
